<Window x:Class="Camshot.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open and Save File..." Height="155" Width="494" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ThreeDBorderWindow" FontSize="16"
        Background="White">
    <Grid Height="110" Width="473" OpacityMask="#FF5F3E3E" Background="White">
        <TextBox TextWrapping="Wrap" Height="41" HorizontalAlignment="Left" Name="textBlock1"  VerticalAlignment="Top" Width="449" FontWeight="Normal" FontSize="14" FontFamily="Calibri" Margin="12,12,0,0" BorderBrush="Black" />
        <Button Content="Save As" Height="34" HorizontalAlignment="Left" Margin="76,59,0,0" Name="button1" VerticalAlignment="Top" Width="145" Click="button1_Click" BorderBrush="Black" FontSize="11" />
        <Button  Height="34" HorizontalAlignment="Right" Margin="0,59,40,0" Name="button2" VerticalAlignment="Top" Width="144" Click="button2_Click" FontSize="11" BorderBrush="Black" />
    </Grid>
</Window>
